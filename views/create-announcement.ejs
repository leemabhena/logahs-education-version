<div class="container-fluid" style="padding: 0 20px;">
    <h4>Create New Announcement</h4>
    <div class="row">
        <div class="col-md-9">
            <form action="/admin/create-announcement" method="post">
                <input type="text" name="title" id="title" placeholder="Title" required class="form-control">
                <br>
                <textarea name="content" id="content" class="form-control" required>Write content here!!!!
                </textarea>
                <br>
                <button type="submit" class="btn-outline-navy" style="margin-bottom: 50px;">
                    <i class="fa-solid fa-paper-plane"></i> Create
                </button>
            </form>
        </div>
        <div class="col-md-3">
            <%- include("announcement-side-nav") %>
        </div>
    </div>
    
</div>

